<div class="border-b bg-white border-gray-300 pl-6 py-2 shadow-sm  text-xl font-bold">
  Editar Art√≠culo
</div>
<div class="p-6">
    <%= form_with(model: @articulo, local: true, class: "space-y-4") do |form| %>
        <% if @articulo.errors.any? %>
        <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
            <h2 class="font-bold">Se encontraron <%= @articulo.errors.count %> errores:</h2>
            <ul class="list-disc pl-6">
            <% @articulo.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
            </ul>
        </div>
        <% end %>

        <div>
            <%= form.label :marca %>
            <%= form.text_field :marca, class: "border rounded w-full p-2" %>
        </div>

        <div>
            <%= form.label :modelo %>
            <%= form.text_field :modelo, class: "border rounded w-full p-2" %>
        </div>

        <div>
            <%= form.label :fecha_ingreso, "Fecha de ingreso", class: "block font-medium text-gray-700 mb-1" %>
            <%= form.date_field :fecha_ingreso, class: "border rounded-lg w-full p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
            <%= form.submit "Guardar", class: "bg-gray-800 text-white px-4 py-2 rounded-lg hover:bg-gray-700 cursor-pointer" %>
        </div>
    <% end %>
</div>
