<div class="border-b bg-white border-gray-300 pl-6 py-2 shadow-sm text-xl font-bold">
  Artículos
</div>

<div class="my-4 ml-4">
  <%= link_to dashboard_path, class: "text-gray-600 hover:text-gray-900 flex items-center" do %>
    <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
            d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    <span>Volver</span>
  <% end %>
</div>

<div class="flex flex-col items-center md:flex-row md:justify-between md:items-center gap-2 mx-4 mb-4">
  <%= link_to "Exportar CSV", articulos_path(format: :csv), 
      class: "px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-700 text-center" %>

  <%= form_with url: import_articulos_path, method: :post, html: { multipart: true }, 
      class: "flex flex-col sm:flex-row items-start sm:items-center gap-2" do |f| %>
    <%= f.file_field :file, 
        class: "block text-sm rounded file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 
               file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 
               hover:file:bg-blue-100 text-gray-500" %>
    <%= f.submit "Importar CSV", 
        class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-500 w-full sm:w-auto" %>
  <% end %>
</div>

<div>
  <% if flash[:alert] %>
    <div class="mb-4 mx-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="mb-4 mx-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<div class="mx-4 overflow-x-auto min-h-[400px]">
  <table class="w-full divide-y divide-gray-200 mx-auto mt-4">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Marca</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Modelo</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Portador actual</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha de ingreso</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
      </tr>
    </thead>

    <tbody class="bg-white divide-y divide-gray-200">
      <% @articulos.each do |articulo| %>
        <tr x-data="{ open: false }">
          <!-- Marca con link y icono -->
          <td class="px-6 py-4 whitespace-nowrap flex items-center">
            <%= link_to articulo_path(articulo), class: "hover:underline flex items-center" do %>
              <span><%= articulo.marca %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" />
              </svg>
            <% end %>
          </td>

          <td class="px-6 py-4 whitespace-nowrap"><%= articulo.modelo %></td>

          <!-- Portador actual con icono -->
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 flex items-center">
            <% if articulo.ver_portador_actual.present? %>
              <%= link_to persona_path(articulo.ver_portador_actual), class: "hover:underline flex items-center" do %>
                <span><%= articulo.ver_portador_actual.nombre %> <%= articulo.ver_portador_actual.apellido %></span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" />
                </svg>
              <% end %>
            <% else %>
              <span class="text-gray-400 text-sm">Sin portador</span>
            <% end %>
          </td>

          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
            <%= articulo.fecha_ingreso.strftime("%d/%m/%Y") %>
          </td>

          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to "✏️", edit_articulo_path(articulo),
                  class: "text-indigo-600 hover:text-indigo-900 mr-2" %>

            <button 
              type="button"
              class="cursor-pointer"
              @click="open = true"
            >
              🗑
            </button>

            <div 
              x-show="open" 
              class="fixed inset-0 flex items-center justify-center text-center z-50"
              style="background-color: rgba(0, 0, 0, 0.5); z-index: 1000; backdrop-filter: blur(5px);"
            >
              <div class="bg-white rounded-lg p-6 shadow-lg w-96">
                <h2 class="text-lg font-bold mb-4">Eliminar Artículo</h2>
                <p class="mb-4">
                  ¿Seguro que deseas eliminar el artículo
                  <span class="font-semibold break-words whitespace-normal"><%= articulo.marca %> <%= articulo.modelo %></span>?
                </p>

                <div class="flex justify-end space-x-2">
                  <button 
                    class="px-4 py-2 bg-gray-300 rounded cursor-pointer"
                    @click="open = false"
                  >
                    Cancelar
                  </button>

                  <%= button_to "Eliminar", articulo_path(articulo), 
                        method: :delete, 
                        class: "px-4 py-2 bg-red-600 text-white rounded cursor-pointer" %>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-auto">
  <%= render "shared/pagination", paginable: @articulos %>
</div>
