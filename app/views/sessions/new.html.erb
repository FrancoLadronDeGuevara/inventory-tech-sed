<div class="mx-auto md:w-2/3 min-h-screen flex items-center justify-center my-10" style="margin-top: 4rem; margin-bottom: 4rem">
  <div class="w-full max-w-md">
    <% if alert = flash[:alert] %>
      <div class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg" id="alert">
        <%= alert %>
      </div>
    <% end %>

    <% if notice = flash[:notice] %>
      <div class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg" id="notice">
        <%= notice %>
      </div>
    <% end %>

    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold mb-2">
          Sistema de Inventario
        </h1>
        <p class="text-gray-600">
          Ingresa tus credenciales para acceder
        </p>
      </div>
      
      <%= form_with url: session_path, method: :post, local: true, class: "space-y-6" do |form| %>
        <div>
          <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email_address, 
            required: true, 
            autofocus: true, 
            autocomplete: "username", 
            placeholder: "tu@email.com", 
            value: params[:email_address],
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg outline-none" %>
        </div>
        
        <div>
          <%= form.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <%= form.password_field :password, 
              required: true, 
              autocomplete: "current-password", 
              placeholder: "********", 
              maxlength: 72,
              id: "password-field",
              class: "w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg outline-none" %>
            
            <button 
              type="button"
              id="toggle-password"
              class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600"
            >
              <svg id="eye-closed" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M4.63803 3.57709C4.34513 3.2842 3.87026 3.2842 3.57737 3.57709C3.28447 3.86999 3.28447 4.34486 3.57737 4.63775L4.85323 5.91362C3.74609 6.84199 2.89363 8.06395 2.4155 9.45936C2.3615 9.61694 2.3615 9.78801 2.41549 9.94558C3.49488 13.0957 6.48191 15.3619 10.0002 15.3619C11.255 15.3619 12.4422 15.0737 13.4994 14.5598L15.3625 16.4229C15.6554 16.7158 16.1302 16.7158 16.4231 16.4229C16.716 16.13 16.716 15.6551 16.4231 15.3622L4.63803 3.57709ZM12.3608 13.4212L10.4475 11.5079C10.3061 11.5423 10.1584 11.5606 10.0064 11.5606H9.99151C8.96527 11.5606 8.13333 10.7286 8.13333 9.70237C8.13333 9.5461 8.15262 9.39434 8.18895 9.24933L5.91885 6.97923C5.03505 7.69015 4.34057 8.62704 3.92328 9.70247C4.86803 12.1373 7.23361 13.8619 10.0002 13.8619C10.8326 13.8619 11.6287 13.7058 12.3608 13.4212ZM16.0771 9.70249C15.7843 10.4569 15.3552 11.1432 14.8199 11.7311L15.8813 12.7925C16.6329 11.9813 17.2187 11.0143 17.5849 9.94561C17.6389 9.78803 17.6389 9.61696 17.5849 9.45938C16.5055 6.30925 13.5184 4.04303 10.0002 4.04303C9.13525 4.04303 8.30244 4.17999 7.52218 4.43338L8.75139 5.66259C9.1556 5.58413 9.57311 5.54303 10.0002 5.54303C12.7667 5.54303 15.1323 7.26768 16.0771 9.70249Z"
                  fill="#98A2B3"
                />
              </svg>
              <svg id="eye-open" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M10.0002 13.8619C7.23361 13.8619 4.86803 12.1372 3.92328 9.70241C4.86804 7.26761 7.23361 5.54297 10.0002 5.54297C12.7667 5.54297 15.1323 7.26762 16.0771 9.70243C15.1323 12.1372 12.7667 13.8619 10.0002 13.8619ZM10.0002 4.04297C6.48191 4.04297 3.49489 6.30917 2.4155 9.4593C2.3615 9.61687 2.3615 9.78794 2.41549 9.94552C3.49488 13.0957 6.48191 15.3619 10.0002 15.3619C13.5184 15.3619 16.5055 13.0957 17.5849 9.94555C17.6389 9.78797 17.6389 9.6169 17.5849 9.45932C16.5055 6.30919 13.5184 4.04297 10.0002 4.04297ZM9.99151 7.84413C8.96527 7.84413 8.13333 8.67606 8.13333 9.70231C8.13333 10.7286 8.96527 11.5605 9.99151 11.5605H10.0064C11.0326 11.5605 11.8646 10.7286 11.8646 9.70231C11.8646 8.67606 11.0326 7.84413 10.0064 7.84413H9.99151Z"
                  fill="#98A2B3"
               />
            </button>
          </div>
        </div>
        
        <div>
          <%= form.submit "Iniciar Sesión",
            class:"w-full bg-blue-900 text-white py-2 px-4 rounded-lg focus:ring-2 focus:ring-blue-400  focus:ring-offset-2 transition-colors font-medium cursor-pointer" %>
        </div>
        
        <div class="text-center text-sm text-gray-500 mt-6">
          <p class="font-medium mb-2">Credenciales de prueba:</p>
          <p><strong>Admin:</strong> admin@inventario.com / password123</p>
          <p><strong>Usuario:</strong> usuario@inventario.com / password123</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.getElementById('toggle-password')?.addEventListener('click', function() {
    const passwordField = document.getElementById('password-field');
    const eyeClosed = document.getElementById('eye-closed');
    const eyeOpen = document.getElementById('eye-open');
    
    if (passwordField.type === 'password') {
      passwordField.type = 'text';
      eyeClosed.classList.add('hidden');
      eyeOpen.classList.remove('hidden');
    } else {
      passwordField.type = 'password';
      eyeClosed.classList.remove('hidden');
      eyeOpen.classList.add('hidden');
    }
  });
</script>