<div class="border-b bg-white border-gray-300 pl-6 py-2 shadow-sm text-xl font-bold">
  Transferencias
</div>

<div class="mt-4 ml-4">
  <%= link_to dashboard_path, class: "text-gray-600 hover:text-gray-900 flex items-center" do %>
    <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
            d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    <span>Volver</span>
  <% end %>
</div>

<div class="flex flex-col items-center md:flex-row md:justify-between md:items-center gap-2 m-4">
  <%= link_to "Exportar CSV", transferencias_path(format: :csv), 
      class: "px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-700 text-center" %>

  <%= form_with url: import_transferencias_path, method: :post, html: { multipart: true }, 
      class: "flex flex-col sm:flex-row items-start sm:items-center gap-2" do |f| %>
    <%= f.file_field :file, 
        class: "block text-sm rounded file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 
               file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 
               hover:file:bg-blue-100 text-gray-500" %>
    <%= f.submit "Importar CSV", 
        class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-500 w-full sm:w-auto" %>
  <% end %>
</div>

<div class="mt-4">
  <% if flash[:alert] %>
    <div class="mb-4 mx-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="mb-4 mx-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<div class="mx-4 overflow-x-auto min-h-[400px] mt-4">
  <table class="w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ArtÃ­culo</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">PertenecÃ­a</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pertenece</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Eliminar</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @transferencias.each do |t| %>
        <tr x-data="{ open: false }">
          <td class="px-6 py-4 whitespace-nowrap">
            <%= t.fecha_transferencia.strftime("%d/%m/%Y") if t.fecha_transferencia %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to articulo_path(t.articulo), class: "hover:underline flex items-center" do %>
              <span><%= "#{t.articulo.marca} #{t.articulo.modelo}" %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" />
              </svg>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if t.portador_anterior.present? %>
              <%= link_to t.portador_anterior.nombre_completo, persona_path(t.portador_anterior), class: "hover:underline flex items-center" %>
            <% else %>
              <span class="text-gray-400">Sin portador</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to t.portador_nuevo.nombre_completo, persona_path(t.portador_nuevo), class: "hover:underline flex items-center" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <button type="button" class="cursor-pointer" @click="open = true">ğŸ—‘</button>

            <div 
              x-show="open" 
              class="fixed inset-0 flex items-center justify-center text-center z-50"
              style="background-color: rgba(0, 0, 0, 0.5); backdrop-filter: blur(5px);"
            >
              <div class="bg-white rounded-lg p-6 shadow-lg w-96">
                <h2 class="text-lg font-bold mb-4">Eliminar Transferencia</h2>
                <p class="mb-4  break-words whitespace-normal">
                  Â¿Seguro que deseas eliminar la transferencia del artÃ­culo
                  <span class="font-semibold"><%= t.articulo.marca %> <%= t.articulo.modelo %></span>?
                </p>
                <div class="flex justify-end space-x-2">
                  <button class="px-4 py-2 bg-gray-300 rounded cursor-pointer" @click="open = false">Cancelar</button>
                  <%= button_to "Eliminar", transferencia_path(t), method: :delete, class: "px-4 py-2 bg-red-600 text-white rounded cursor-pointer" %>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= render "shared/pagination", paginable: @transferencias %>
</div>
