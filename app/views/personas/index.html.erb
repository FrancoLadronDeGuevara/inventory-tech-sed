<div class="border-b bg-white border-gray-300 pl-6 py-2 shadow-sm text-xl font-bold">
  Personas
</div>


  <div class="flex items-center space-x-2 ml-4 my-4">
    <%= link_to dashboard_path, class: "text-gray-600 hover:text-gray-900 flex items-center" do %>
      <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      <span>Volver</span>
    <% end %>
  </div>

<div class="flex flex-col items-center md:flex-row md:justify-between md:items-center gap-2 m-4">
  <%= link_to "Exportar CSV", personas_path(format: :csv), 
      class: "px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-700 text-center" %>

  <%= form_with url: import_personas_path, method: :post, html: { multipart: true }, 
      class: "flex flex-col sm:flex-row items-start sm:items-center gap-2" do |f| %>
    <%= f.file_field :file, 
        class: "block text-sm rounded file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 
               file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 
               hover:file:bg-blue-100 text-gray-500" %>
    <%= f.submit "Importar CSV", 
        class: "px-4 py-2 bg-green-600 text-white rounded hover:bg-green-500 w-full sm:w-auto" %>
  <% end %>
</div>


<div>
  <% if flash[:alert] %>
    <div class="mb-4 mx-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <%= flash[:alert] %>
    </div>
  <% end %>
  <% if flash[:notice] %>
    <div class="mb-4 mx-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>

<div class="mx-4 overflow-x-auto min-h-[400px] mt-4">
  <table class="w-full divide-y divide-gray-200 mx-auto">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nombre</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Apellido</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Artículos</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @personas.each do |persona| %>
        <tr x-data="{ open: false }">
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to persona_path(persona), class: "hover:underline flex items-center" do %>
              <span><%= persona.nombre %></span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" />
              </svg>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap"><%= persona.apellido %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
            <% if persona.articulos.any? %>
              <% persona.articulos.limit(2).each do |a| %>
                <div class="flex items-center space-x-1">
                  <%= link_to a.marca + " " + a.modelo, articulo_path(a), class: "hover:underline text-gray-500 text-xs" %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z" />
                  </svg>
                </div>
              <% end %>
              <% if persona.articulos.size > 2 %>
                <div class="text-xs text-gray-500">y <%= persona.articulos.size - 2 %> más...</div>
              <% end %>
            <% else %>
              <div class="text-gray-400 text-sm">Sin artículos</div>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to "✏️", edit_persona_path(persona), class: "text-indigo-600 hover:text-indigo-900 mr-2" %>
            <button type="button" class="cursor-pointer" @click="open = true">🗑</button>
            <div x-show="open" class="fixed inset-0 flex items-center justify-center text-center z-50"
                 style="background-color: rgba(0, 0, 0, 0.5); z-index: 1000; backdrop-filter: blur(5px);">
              <div class="bg-white rounded-lg p-6 shadow-lg w-96">
                <h2 class="text-lg font-bold mb-4">Eliminar Persona</h2>
                <p class="mb-4">
                  ¿Seguro que deseas eliminar a 
                  <span class="font-semibold break-words whitespace-normal"><%= persona.nombre %> <%= persona.apellido %></span>?
                </p>
                <div class="flex justify-end space-x-2">
                  <button class="px-4 py-2 bg-gray-300 rounded cursor-pointer" @click="open = false">Cancelar</button>
                  <%= button_to "Eliminar", persona_path(persona), method: :delete, class: "px-4 py-2 bg-red-600 text-white rounded cursor-pointer" %>
                </div>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-auto">
  <%= render "shared/pagination", paginable: @personas %>
</div>
