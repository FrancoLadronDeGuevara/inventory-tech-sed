<div class="container mx-auto">
  <div class="border-b bg-white border-gray-300 pl-6 py-2 shadow-sm  text-xl font-bold">
    Ultimos movimientos
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10 mt-6 px-4">
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <p class="text-2xl font-bold text-blue-600"><%= @total_articulos %></p>
      <p class="text-gray-600">Artículos</p>
    </div>
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <p class="text-2xl font-bold text-green-600"><%= @total_personas %></p>
      <p class="text-gray-600">Personas</p>
    </div>
    <div class="bg-white shadow rounded-lg p-6 text-center">
      <p class="text-2xl font-bold text-purple-600"><%= @total_transferencias %></p>
      <p class="text-gray-600">Transferencias</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-10 px-4">
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Artículos recientes</h2>
      <table class="min-w-full text-sm">
        <thead>
          <tr class="text-left text-gray-500">
            <th class="py-2">Modelo</th>
            <th class="py-2">Marca</th>
            <th class="py-2">Ingreso</th>
          </tr>
        </thead>
        <tbody>
          <% @articulos_recientes.each do |art| %>
            <tr class="border-t">
              <td class="py-2"><%= art.modelo %></td>
              <td class="py-2"><%= art.marca %></td>
              <td class="py-2"><%= art.fecha_ingreso.strftime("%d/%m/%Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold mb-4">Transferencias recientes</h2>
      <table class="min-w-full text-sm">
        <thead>
          <tr class="text-left text-gray-500">
            <th class="py-2">Artículo</th>
            <th class="py-2">Pertenecía</th>
            <th class="py-2">Pertenece</th>
            <th class="py-2">Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% @transferencias_recientes.each do |t| %>
            <tr class="border-t">
              <td class="py-2"><%= t.articulo.modelo %></td>
              <td class="py-2"><%= t.portador_anterior&.nombre || "N/A" %></td>
              <td class="py-2"><%= t.portador_nuevo&.nombre %></td>
              <td class="py-2"><%= t.fecha_transferencia.strftime("%d/%m/%Y") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
